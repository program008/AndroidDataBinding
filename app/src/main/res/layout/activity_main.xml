<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.me.androiddatabinding.MainActivity">

    <Button
        android:id="@+id/btn_basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start BasicActivity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_observable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start ObservableActivity"
        android:textAllCaps="false"
        android:layout_below="@+id/btn_basic"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btn_viewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_observable"
        android:text="start ViewWithIDActivity"/>

    <Button
        android:id="@+id/btn_view_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="start ViewStubActivity"
        android:layout_below="@+id/btn_viewid"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/btn_conversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start ConversionsActivity"
        android:layout_below="@+id/btn_view_stub"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_conversion"
        android:text="start ResourceActivity"/>

</RelativeLayout>
